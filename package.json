{
  "name": "microservices-boilerplate",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "postinstall": "pnpm prisma:generate:all",
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "start:gateway": "nest start api-gateway --watch",
    "start:user": "nest start user-service --watch",
    "start:auth": "nest start auth-service --watch",
    "start:mail": "nest start mail-service --watch",
    "start:all": "concurrently -c \"cyan.bold,magenta.bold,yellow.bold\" \"pnpm start:gateway\" \"pnpm start:user\" \"pnpm start:auth\" \"pnpm start:mail\"",
    "build:gateway": "nest build api-gateway",
    "build:user": "nest build user-service",
    "build:auth": "nest build auth-service",
    "build:mail": "nest build mail-service",
    "build:all": "pnpm run build:gateway && pnpm run build:user && pnpm run build:auth && pnpm run build:mail",
    "start:prod:gateway": "node dist/apps/api-gateway/main",
    "start:prod:user": "node dist/apps/user-service/main",
    "start:prod:auth": "node dist/apps/auth-service/main",
    "start:prod:mail": "node dist/apps/mail-service/main",
    "prisma:generate:user": "prisma generate --schema=apps/user-service/prisma/schema.prisma",
    "prisma:generate:auth": "prisma generate --schema=apps/auth-service/prisma/schema.prisma",
    "prisma:generate:mail": "prisma generate --schema=apps/mail-service/prisma/schema.prisma",
    "prisma:generate:all": "pnpm run prisma:generate:user && pnpm run prisma:generate:auth && pnpm run prisma:generate:mail",
    "migrate:user": "cd apps/user-service && prisma migrate dev",
    "migrate:auth": "cd apps/auth-service && prisma migrate dev",
    "migrate:mail": "cd apps/mail-service && prisma migrate dev",
    "studio:user": "cd apps/user-service && prisma studio",
    "studio:auth": "cd apps/auth-service && prisma studio",
    "studio:mail": "cd apps/mail-service && prisma studio",
    "seed:auth": "ts-node apps/auth-service/prisma/seed.ts",
    "seed:user": "ts-node apps/user-service/prisma/seed.ts",
    "seed:all": "pnpm run seed:auth && pnpm run seed:user"
  },
  "dependencies": {
    "@nestjs/bullmq": "^11.0.4",
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/jwt": "^11.0.2",
    "@nestjs/microservices": "^11.1.9",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/swagger": "^11.2.3",
    "@prisma/client": "5.22.0",
    "@sendgrid/mail": "^8.1.6",
    "bcrypt": "^6.0.0",
    "bullmq": "^5.66.2",
    "cookie-parser": "^1.4.7",
    "ioredis": "^5.8.2",
    "nestjs-zod": "^5.0.1",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pnpm": "^10.26.2",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@types/bcrypt": "^6.0.0",
    "@types/cookie-parser": "^1.4.10",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.7",
    "@types/passport-jwt": "^4.0.1",
    "@types/supertest": "^6.0.2",
    "concurrently": "^9.2.1",
    "dotenv": "^17.2.3",
    "dotenv-cli": "^11.0.0",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^30.0.0",
    "prettier": "^3.4.2",
    "prisma": "5.22.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  }
}
