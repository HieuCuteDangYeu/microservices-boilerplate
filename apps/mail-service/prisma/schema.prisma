generator client {
  provider = "prisma-client-js"
  output   = "../../../node_modules/@prisma/mail-client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model SentEmail {
  id        String   @id @default(uuid())
  to        String
  subject   String
  template  String
  status    String   // SENT, FAILED
  error     String?
  createdAt DateTime @default(now())
}