{
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "resolvePackageJsonExports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "@auth/*": ["apps/auth-service/src/*"],
      "@common/*": ["libs/common/src/*"],
      "@gateway/*": ["apps/api-gateway/src/*"],
      "@prisma/auth-client": ["node_modules/@prisma/auth-client"],
      "@prisma/user-client": ["node_modules/@prisma/user-client"],
      "@user/*": ["apps/user-service/src/*"],
      "@mail/*": ["apps/mail-service/src/*"],
      "@prisma/mail-client": ["node_modules/@prisma/mail-client"]
    }
  }
}
